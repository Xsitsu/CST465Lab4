@model ComputerModel

@{
    ViewData["Title"] = "HHEditorFor";
}

<h2>HHEditorFor</h2>

@using (Html.BeginForm("Submit", "HHEditorFor", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        @Html.EditorFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AdminPassword, new { @class = "control-label" })
        @Html.EditorFor(m => m.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AdminPassword)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IpAddress, new { @class = "control-label" })
        @Html.EditorFor(m => m.IpAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IpAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "control-label" })
        @Html.EditorFor(m => m.Location, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Location)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OS, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.OS, new SelectList(ComputerModel.OSTypes), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OS)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "control-label" })
        @Html.EditorFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SupportedMonitors, new { @class = "control-label" })
        @Html.EditorFor(m => m.SupportedMonitors, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SupportedMonitors)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}